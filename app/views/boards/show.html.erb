<div class="d-flex align-items-center mt-4 mb-4">
  <div class="ms-auto boards__linkBox">
    <!-- <a href="/boards" class="btn btn-outline-dark">一覧</a> -->
    <%= link_to '一覧', boards_path, class: 'btn btn-outline-dark' %>
    <!-- <a href="/boards" class="btn btn-outline-dark">編集</a> -->
    <%= link_to '編集', edit_board_path(@board), class: 'btn btn-outline-dark'
    %>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h4><%= @board.title %></h4>
  </div>
  <div class="card-body">
    <p class="card-text"><%= simple_format(@board.body) %></p>
    <p class="text-end font-weight-bold me-5"><%= @board.name %></p>
  </div>
</div>
